---
interface Props extends astroHTML.JSX.ButtonHTMLAttributes {
  outline?: boolean;
  size?: "md" | "sm";
}
const { outline = false, size = "md", ...attrs } = Astro.props;
---

<button
  class="rounded border-secondary-600 font-semibold uppercase outline-none hover:border-secondary-700 hover:bg-secondary-700 hover:text-white focus-visible:ring-2 focus-visible:ring-secondary-700 focus-visible:ring-offset-2 active:bg-secondary-700 active:text-white"
  class:list={[
    size === "sm" ? "border px-3 py-1 text-sm" : "border-2 px-4 py-2",
    outline
      ? "bg-transparent text-secondary-700"
      : "bg-secondary-600 text-white",
  ]}
  {...attrs}
>
  <slot />
</button>
